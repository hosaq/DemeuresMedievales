{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/connexion.css">
{% endblock %}
{% block title %}Connectez vous !{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-4">&nbsp;
        </div>
        <div class="col-md-5 mt-10">
            <div class="bg-light py-3 px-3">
                <h1>Connectez-vous !</h1>
                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue, l'adresse mail ou le mot de
                        passe sont invalides.
                    </div>
                {% endif %}
                <form action="{{path('connexion_login')}}" method="post">
                    <div class="form-group">
                        <label class="" for="email">Email</label>
                        <input class="form-control" id="email" name="_username"
                         placeholder="Adresse mail..." type="text" 
                         value="{{username}}" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input class="form-control" id="password" name="_password" placeholder="Mot de passe..." type="password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Connexion !</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





{% endblock %}
