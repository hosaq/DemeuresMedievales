{% extends 'base.html.twig' %}
{%block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/base.css">
    <link rel="stylesheet" type="text/css" href="/css/bien.css">
{% endblock %}
{% block title %}Modifier votre annonce{% endblock %}
{% form_theme form '/elements/_formimages.html.twig' %}
{% block body %}
<div class="titre" style="background-image:url('/images/medieval.jpg') ">
    <div class="container">
        <h1>Bienvenu sur notre site !</h1>
        <p>Vous trouverez ici le questionnaire utile à la description de votre gîte</p>
        <p class="h2">
            Choisissez de<strong> belles photos</strong> et rédigez de<strong>
            belles descriptions
            </strong> de votre demeure !
        </p>
        
    </div>
</div>
<div class="container">
    <h1>Entrez la description de votre bien :</h1>
    {{form_start(form)}}
    {{form_widget(form)}}
    <button class="btn btn-primary" type="submit">Modifier votre annonce
    </button>
    {{form_end(form)}}
   
</div>

{% endblock %}



