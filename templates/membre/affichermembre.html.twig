{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/base.css">
{% endblock %}
{% block title %}{{membre.identite}}{% endblock %}

{% block body %}
<div class="container mt-5 ">
    <div class="row align-items-center mb-4 ">
        <div class="col-3 text-center">
            <img alt="{{membre.identite}}" src="{{membre.avatar}}" class='ronde'>
            <br>
            <span class="badge badge-primary mt-3">{{membre.immos|length}}
                annonces</span>
        </div>
        <div class="col-9">
            <h1>{{membre.identite}}</h1>
            {% if membre is same as(app.user) %}
            <div class="mt-3">
            <a href="{{path('modifier_compte')}}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="text-center">
    {{membre.description|raw}}
    </div>
    <hr>
    <h2 class="mt-5 mb-4">Les annonces de {{membre.identite}} :</h2>
    {% if membre.immos|length >0 %}
        <div class="row">
            {% for bien in membre.immos %}
               {% include '/elements/carteimmo.html.twig'%}
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning">
            <p>
                <strong>{{membre.identite}}</strong> n'a pas encore d'annonce sur ce site.
            </p>
        </div>
    {% endif %}


</div>


{% endblock %}